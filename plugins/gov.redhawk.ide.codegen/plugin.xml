<plugin>
   <extension-point id="codegens" name="SCA Component Code Generator" schema="schema/codegens.exsd"/>
   <extension-point id="codegenTemplate" name="SCA Component Code Generation Template" schema="schema/codegenTemplate.exsd"/>
   <extension-point id="portGenerator" name="SCA Port Code Generator" schema="schema/portGenerator.exsd"/>
   
   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://www.redhawk.gov/model/codegen"
            class="gov.redhawk.ide.codegen.CodegenPackage"
            genModel="model/codegen.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.content_parser">
      <parser
            contentTypeIdentifier="gov.redhawk.model.codegen"
            class="gov.redhawk.ide.codegen.util.CodegenResourceFactoryImpl"/>
   </extension>
   
   <extension point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.emf.ecore.xmi"
            file-extensions="wavedev"
            file-names="*.wavedev"
            id="gov.redhawk.model.wavedev"
            name="%_UI_Redhawk_content_type"
            priority="normal">
         <describer
               class="org.eclipse.emf.ecore.xmi.impl.RootXMLContentHandlerImpl$Describer"
               plugin="org.eclipse.emf.ecore.xmi">
            <parameter
                  name="namespace"
                  value="http://www.redhawk.gov/model/codegen">
            </parameter>
            <parameter
                  name="kind"
                  value="xmi">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://sca.jpeojtrs.mil/spd">
         </package>
         <constraints
               categories="gov.redhawk.validation.category">
            <constraint
                  class="gov.redhawk.ide.codegen.internal.validation.WavedevFileConstraint"
                  id="wavedevfile_constraint"
                  lang="java"
                  mode="Live"
                  name="%constraint.name.validWavedevFile"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  %constraint.message.validWavedevFile
               </message>
               <target
                     class="Implementation">
                  <event
                        name="Unset">
                     <feature
                           name="wavedevFile">
                     </feature>
                  </event>
               </target>
            </constraint>
            <constraint
                  class="gov.redhawk.ide.codegen.internal.validation.WavedevFileConstraint"
                  id="implsettings_constraint"
                  lang="java"
                  mode="Live"
                  name="%constraint.name.validImplSettings"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  %constraint.message.validImplSettings
               </message>
               <target
                     class="Implementation">
                  <event
                        name="Unset">
                     <feature
                           name="wavedevFile">
                     </feature>
                  </event>
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
   </extension>
   <extension
         id="gov.redhawk.ide.codegen.builders.TopLevelBuildScript"
         name="Top level build script generator"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="false"
            isConfigurable="false">
         <run
               class="gov.redhawk.ide.codegen.builders.TopLevelBuildScript">
         </run>
      </builder>
   </extension>
   <extension
         id="gov.redhawk.ide.codegen.builders.TopLevelRPMSpec"
         name="Top level RPM spec file generator"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="false"
            isConfigurable="false">
         <run
               class="gov.redhawk.ide.codegen.builders.TopLevelRPMSpec">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="gov.redhawk.ide.codegen.internal.ContainsTypePropertyTester"
            id="gov.redhawk.ide.codegen"
            namespace="gov.redhawk.ide.codegen"
            properties="containsType"
            type="org.eclipse.core.resources.IFile">
      </propertyTester>
   </extension>
</plugin>
